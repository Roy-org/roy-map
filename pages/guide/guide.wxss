.input-box {
  display: flex;
  align-items: center;
  height: 70px;
  padding: 10px 20px;
  background: #44A0D9;
}
.input-box-inner {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
input {
  background: #FFF;
  height: 30px;
  border-radius: 2px;
}
.exchange-btn {
  margin-left: 10px;
}
.trip-type{
  display: flex;
}
.trip-item{
  height: 35px; 
  line-height: 35px;
  text-align: center;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1
}
.trip-item.active{
  color:#0091ff;
}
.content-box {
  display: flex;
  flex-direction: column;
  position:absolute; 
  top: 125px;
  bottom: 0;
  left: 0;
  right: 0;
}
.map_box{
  flex: 1;
}
#navi_map{
  width: 100%;
  height: 100%;
}
.text_box {
  height: 90px;
}
.text_box .text{
  margin: 15px;
}