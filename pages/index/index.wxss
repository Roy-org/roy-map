/**index.wxss**/
#myMap {
  width: 100%;
  /* height: 100%; */
  flex: 1;
}

.my-location {
  position: absolute;
  left: 50%;
  margin-left: -40px;
  bottom: 5px;
  width: 80px;
  height: 80px;
  background: #FFF;
  border-radius: 50%;
  box-shadow: 1px 1px 2px rgba(0, 0, 0, .1);
  opacity: .8;
}
.inner {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 30px;
  height: 30px;
  background: #44A0D9;
  border-radius: 50%;
}