/* pages/weather/weather.wxss */

.weather-container {
  display: flex;
  flex-direction: column;
  padding: 0 10px;
}

.weather-list {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-bottom: 10px;
  color: #fff;
  font-size: 14px;
  box-sizing: border-box;
}

.weather-item {
  display: flex;
  align-items: center;
  margin-bottom: 5px;
  border-radius: 5px;
  background-color: #44a0d9;
  padding: 5px 20px;
}

.weather-item > view {
  flex: 1;
}

.weather-desc > view {
  margin-top: 5px;
}

.location {
  font-size: 14px;
}

.weather {
  font-size: 16px;
}

.date, .tmp {
  font-weight: bold;
}

.weather_icon {
  text-align: center;
}

.weather_icon image {
  height: 75px;
  width: 75px;
}

.life-style {
  font-size: 12px;
}

.life-style-item {
  margin-top: 5px;
}
